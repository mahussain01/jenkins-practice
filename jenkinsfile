pipeline {
    agent { node { label 'agent-1' } } 
    stages {
        stage('Build') {
            steps {
                echo 'building'
                sh 'pwd'
                sh 'ls -ltr'
            }
        }
        stage('Test') {
            steps {
                echo 'testing'
            }
        }
        stage('Deploy') {
            steps {
                echo 'deploying'
                //error 'this is failed'
            }
        }
    }
        post { 
        always { 
            echo 'I will always run whether the job is done or not'
        }
        success{
            echo 'I will run only after successful run'
        }
        failure{
            echo 'i will run only after failure'
        }
    }
}